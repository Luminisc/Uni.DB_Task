@model GamesStoreViewModel
@{
    ViewData["Title"] = "Лавка";
}

<div>
    <div class="text-center">
        <div class="slider">
            <h2>ПарЪ - сударъ знает толк в играх</h2>
            <h3>ПарЪ — онлайн-сервис цифрового распространения компьютерных игр и программ, разработанный и поддерживаемый компанией ПарЪилка</h3>
        </div>
    </div>
</div>

<div class="shop-area ptb-90">
    <div class="container-fluid">
        <div class="shop-style-all">
            <div class="row">
                <div class="grid">
                    @foreach (var game in Model.Games)
                    {
                        <div class="col-md-3 col-sm-6 col-xs-12 grid-item cat1">
                            <div class="shop hover-style mb-30">
                                <div class="shop-img">
                                    <a href="@Url.Action( "App", "Home", new { appid = game.AppId })">
                                        <img src="@game.GetLogoUrl" alt="" />
                                    </a>
                                </div>
                                <div class="shop-title title-style-1">
                                    <h3>@Html.ActionLink(game.Name, "App", "Home", new { appid = game.AppId })</h3>
                                </div>
                                <div class="product-cart">
                                    <a href="#"><img src="@game.GetIconUrl" alt="" /></a>
                                </div>
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>